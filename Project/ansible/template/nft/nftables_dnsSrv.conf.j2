#!/usr/sbin/nft -f
flush ruleset

table inet filter {
    chain input {
        type filter hook input priority 0; policy drop;
        iif "lo" accept
        ct state established,related accept
        ip protocol icmp accept

        # SSH, DNS, HTTPS 
        ip saddr { 192.168.56.0/24, 10.10.1.0/24 } tcp dport 22 accept
        ip saddr { 192.168.56.0/24, 10.10.1.0/24 } udp dport 53 \
          limit rate 20/second burst 30 packets accept
        ip saddr { 192.168.56.0/24, 10.10.1.0/24 } tcp dport 53 accept
        tcp dport { 80, 443 } accept
        ip saddr 10.10.1.0/24 tcp dport 9100 accept
    }

    # FORWARD: разрешить исходящий трафик из DMZ → интернет
    chain forward {
        type filter hook forward priority 0; policy drop;

        # DMZ → интернет
        ip saddr 10.10.1.0/24 oif "enp0s3" accept   # enp0s3 — NAT-интерфейс (обычно первый)

        # Ответный трафик
        ct state established,related accept
    }

    chain output {
        type filter hook output priority 0; policy accept;
    }
}

# Таблица NAT для маскарадинга
table ip nat {
    chain postrouting {
        type nat hook postrouting priority 100; policy accept;
        # Маскируем весь исходящий трафик из DMZ
        ip saddr 10.10.1.0/24 oif "enp0s3" masquerade
    }

    chain prerouting {
        type nat hook prerouting priority -100; policy accept;
        # (может быть использован для DNAT, например, port-forwarding)
    }
}
