MACHINES = {
  :dnsSrv => {
        :box_name => "ubuntu/jammy64",
        #{}"box/DNS.box"ubuntu/jammy64
        :vm_name => "dnsSrv",
        #:public => {:ip => "10.10.10.1", :adapter => 1},
        :net => [
                    #ip, adpter, netmask, virtualbox__intnet
                    ["10.10.1.10", 2, "255.255.255.0",  "dmz"],
                    ["192.168.56.10", 8, "255.255.255.0"],
                ]
  },

  :"db-master" => {
        :box_name => "ubuntu/jammy64",
        #{}"box/DNS.box"ubuntu/jammy64
        :vm_name => "db-master",
        #:public => {:ip => "10.10.10.1", :adapter => 1},
        :net => [
                    #ip, adpter, netmask, virtualbox__intnet
                    ["10.10.1.51", 2, "255.255.255.0",  "dmz"],
                    ["192.168.56.51", 8, "255.255.255.0"],
                ]
  },

  :"db-slave" => {
        :box_name => "ubuntu/jammy64",
        #{}"box/DNS.box"ubuntu/jammy64
        :vm_name => "db-master",
        #:public => {:ip => "10.10.10.1", :adapter => 1},
        :net => [
                    #ip, adpter, netmask, virtualbox__intnet
                    ["10.10.1.52", 2, "255.255.255.0",  "dmz"],
                    ["192.168.56.52", 8, "255.255.255.0"],
                ]
  },


}

Vagrant.configure("2") do |config|
  MACHINES.each do |boxname, boxconfig|

    config.vm.define boxname do |box|
      box.vm.box = boxconfig[:box_name]
      box.vm.hostname = boxconfig[:vm_name]
      #box.ssh.username = "vagrant"
      #box.ssh.password = "vagrant"
      #box.ssh.insert_key = true


      box.vm.provider "virtualbox" do |v|
        v.memory = 768
        v.cpus = 1
       end

      boxconfig[:net].each do |ipconf|
        box.vm.network("private_network", ip: ipconf[0], adapter: ipconf[1], netmask: ipconf[2], virtualbox__intnet: ipconf[3])
      end

      if boxconfig.key?(:public)
        box.vm.network "public_network", boxconfig[:public]
      end

        box.vm.synced_folder ".", "/vagrant", disabled: true
      # box.vm.provision "shell", inline: <<-SHELL
      #    mkdir -p ~root/.ssh
      #    cp ~vagrant/.ssh/auth* ~root/.ssh
      #  SHELL
    end
            # Отключаем генерацию уникальных ключей
    config.ssh.insert_key = false
    config.ssh.verify_host_key = false
    # Указываем общий insecure key для всех ВМ
    config.ssh.private_key_path = ["~/.vagrant.d/insecure_private_key"]

  #   config.vm.provision "ansible" do |ansible|
  #    ansible.playbook = "ansible/provision.yml"
  #    ansible.inventory_path = "ansible/hosts"
  #    ansible.host_key_checking = "false"
  #    ansible.limit = "all"
  # end

  end
end
