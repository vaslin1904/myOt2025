MACHINES = {
  :inetRouter => {
        :box_name => "centos/7",
        :vm_name => "inetRouter",
        #:public => {:ip => "10.10.10.1", :adapter => 1},
        :net => [
                    #ip, adpter, netmask, virtualbox__intnet
                    ["192.168.255.1", 2, "255.255.255.248",  "router-net"],
                    ["192.168.56.10", 8, "255.255.255.0"],
                ]
  },

  :centralRouter => {
        :box_name => "centos/7",
        :vm_name => "centralRouter",
        :net => [
                   ["192.168.255.2",  2, "255.255.255.248",  "router-net"],
                   ["192.168.56.11",  8, "255.255.255.0"],
                ]
  },

  :centralServer => {
        :box_name => "centos/7",
        :vm_name => "centralServer",
        :net => [
                   ["192.168.2.3",    2, "255.255.255.240",  "nginx"],
                   ["192.168.56.12",  8, "255.255.255.0"],
                ]
  },

  :inetRouter2 => {
        :box_name => "centos/7",
        :vm_name => "inetRouter2",
        :net => [
                   ["192.168.2.2",    3, "255.255.255.240",  "nginx"],
                   ["192.168.255.3",  2, "255.255.255.248",  "router-net"],
                   ["192.168.56.9",   8,  "255.255.255.0"],
                ]
  },

}

Vagrant.configure("2") do |config|
  MACHINES.each do |boxname, boxconfig|

    config.vm.define boxname do |box|
      box.vm.boot_timeout = 600
      box.vm.box = boxconfig[:box_name]
      box.vm.host_name = boxconfig[:vm_name]

      box.vm.provider "virtualbox" do |v|
        v.memory = 768
        v.cpus = 1
       end

      boxconfig[:net].each do |ipconf|
        box.vm.network("private_network", ip: ipconf[0], adapter: ipconf[1], netmask: ipconf[2], virtualbox__intnet: ipconf[3])
      end

      if boxconfig.key?(:public)
        box.vm.network "public_network", boxconfig[:public]
      end
        box.vm.synced_folder ".", "/vagrant", disabled: true
      # box.vm.provision "shell", inline: <<-SHELL
      #   mkdir -p ~root/.ssh
      #   cp ~vagrant/.ssh/auth* ~root/.ssh
      # SHELL

    end

  end

  config.vm.define "ansible_controller", primary: false do |controller|
    controller.vm.box = "centos/7"
    controller.vm.host_name = "inetRouter2"
    config.vm.define "inetRouter2" do |inet2|
      inet2.vm.network "forwarded_port",
        guest: 8080,
        host: 8081,
        host_ip: "127.0.0.1"
    end
   controller.vm.provision "ansible", run: "always" do |ansible|
    ansible.limit = "all"
    ansible.playbook = "ansible/provision.yml"
    ansible.inventory_path = "ansible/hosts"
    ansible.host_key_checking = "false"
#   ansible.raw_arguments = ["--forks=5"]
   end
  end
end
